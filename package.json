{
  "name": "arma-class-parser",
  "version": "1.1.1",
  "description": "Parse Armed Assault classes (like: session log, mission.sqm, ...)",
  "keywords": [
    "ArmA",
    "Armed Assault",
    "parser",
    "Arma3"
  ],
  "author": "Moritz Schmidt <fusselwurm@gmail.com>",
  "files": [
    "cli/*.*",
    "dist/*.js",
    "dist/*.d.ts",
    "dist/*.map.js",
    "src/class-parser.ts"
  ],
  "main": "dist/class-parser",
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "http://github.com/fusselwurm/arma-class-parser.git"
  },
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "@types/node": "^12.0.0",
    "codecov": "^3.7.2",
    "jest": "^26.4.2",
    "ts-loader": "^4.4.1",
    "typescript": "^3.5.1",
    "webpack": "^4.12.1",
    "webpack-cli": "^3.0.8"
  },
  "scripts": {
    "test": "tsc && jest --config jestconfig.json",
    "build:amd": "tsc --module amd --moduleResolution node --outFile dist/class-parser.amd.js",
    "build:web": "tsc && webpack -p && rm -r docs/dist",
    "build": "tsc",
    "build:release": "npm run build:web && npm run build:amd"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/"
  }
}
